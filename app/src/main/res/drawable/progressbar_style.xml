<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

      <item android:id="@android:id/background">

           <shape>
               <gradient android:startColor="@color/gray_light"
                   android:centerColor="@color/gray_light3"
                   android:endColor="@color/gray_light"
                   android:angle="180" />

       </shape>

   </item>

    <item android:id="@android:id/progress">
       <clip>
        <shape>
            <gradient android:startColor="@color/dark_orange"
                android:centerColor="@color/dark_orange"
                android:centerY="0.5"
                android:endColor="@color/dark_orange"
                android:angle="180" />

        </shape>
       </clip>
    </item>


</layer-list>